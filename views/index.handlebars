

<div class="container d-flex justify-content-center">
    {{#each twerps}}
    <div class="row">
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
            <div class="card-header title">{{this.author}}</div>
            <div class="card-body">
                <p class="card-text title">{{this.content}}</p>
                <p class="card-text title"><small class="text-muted">Posted:{{this.createdAt}}</small></p>
            </div>
        </div>
    </div>
    {{/each}}
</div>


